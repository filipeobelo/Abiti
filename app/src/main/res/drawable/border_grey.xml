<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <padding
                android:left="16dp"
                android:right="16dp" />
            <solid
                android:color="#b3b3b3" />
            <stroke
                android:width="1dp"
                android:color="#b3b3b3" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:left="16dp"
                android:right="16dp" />
            <solid
                android:color="#ffffff" />
            <stroke
                android:width="1dp"
                android:color="#b3b3b3" />
            <corners android:radius="10dp" />
        </shape>
    </item>

</selector>